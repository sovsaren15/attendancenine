{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "50mb",
                "includeFiles": ["templates/**", "static/**"],
                "systemPackages": ["build-essential", "cmake", "libgl1-mesa-glx"]
            }
        },
        {
            "src": "static/**", "use": "@vercel/static"
        }
    ],
    "routes": [{ "src": "/(.*)", "dest": "app.py" }],
    "env": {
        "PYTHON_VERSION": "3.9"
    }
}